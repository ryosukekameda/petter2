<!DOCTYPE html>
<html>
  <head>
    <title>Petter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/83484975db.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  </head>

   <% if user_signed_in? %>
    
      <body id="wrapper" style="background-color: white;">
        <div id="header">
          <%= render "layouts/header" %>
        </div>
        
        <div class="container">
          <div class="row justify-content-center">
          <!--リスト-->
          <div class="col-3">
            <%= render 'layouts/list' %>
          </div>
          <%= yield %>
          <!--検索フォーム-->
          <div class="col-3">
            <%= render 'layouts/search' %>
          </div>
          </div>
        </div>
        
        <!--ページネーション-->
        <nav class="row justify-content-center" aria-label="pagination">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">前</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">後</a></li>
          </ul>
        </nav>
        
        <%= render "layouts/footer" %>
    
      </body>
      
    <% else %>
    
      <body id="wrapper" style="background=color: white;">
        <div id="header">
          <%= render "layouts/header" %>
        </div>
        
        <div class="container">
          <div class="row justify-content-center">
          <!--リスト-->
          <div class="col-3">
            <%= render 'layouts/list' %>
          </div>
          <%= yield %>
          <!--検索フォーム-->
          <div class="col-3">
            <%= render 'layouts/search' %>
          </div>
          </div>
        </div>
        
        <!--ページネーション-->
        <nav class="row justify-content-center" aria-label="pagination">
          <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">前</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">後</a></li>
          </ul>
        </nav>
        
        <%= render "layouts/footer" %>
        
        
        
      </body>
      
    <% end %>

</html>
