
  <div class="col-6">
    
    <!--新規投稿-->
    <%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>
      <div class="card-new">
        <div class="card-text d-flex align-items-center">
          <%= link_to user_path(@user.id) do %>
            <%= image_tag current_user.get_icon_image(50, 50), class:'rounded-circle' %>
          <% end %>
          <%= f.text_area :body, style:"width: 90%; padding: 10px; border: none; outline: none;", placeholder:"何が起こっている？！"%>
        </div>
        <div class="card-text">
          <label for="post_image" class="custom-file-upload;">
            <i class="fa-regular fa-image" style="font-size: 30px;"></i>
          </label>
          <%= f.file_field :post_image, accept: "image/*", style: "display: none;", id: "post_image", class:"image-preview-input"%>
          Media
          <img id="image-preview" style="max-width: 20px; display: none;" />
            <div class="d-flex justify-content-end" style="flex-grow: 1;">
              <%= f.submit 'Post', class: "btn btn-primary rounded-pill", style: "width: 100px;" %>
            </div>
        </div>
      </div>
    <% end %>
    
    <script>
      document.addEventListener("turbolinks:load", function() {
        const input = document.querySelector('#post_image');
        const preview = document.querySelector('#image-preview');

        input.addEventListener('change', function(event) {
          const file = event.target.files[0];
          if (file) {
            const reader = new FileReader();

            reader.onload = function(e) {
              preview.src = e.target.result;
              preview.style.display = 'block';
            };

            reader.readAsDataURL(file);
          }
        });
      });
    </script>
    
    <!--投稿一覧-->
    <% @posts.each do |post| %>
    
        <div class="card" style="max-width: 100rem; margin: 10px;">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>
              <%= image_tag post.user.get_icon_image(50, 50), class:'rounded-circle' %>
              <%= post.user.name %>
            </div>
            <div style="color: #aaa;">
              <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
            </div>
          </div>
          <div style="padding: 10px;">
            <p><%= post.body %></p>
          </div>
          <div class="row justify-content-center">
            <img class="card-img-top", style="text-center">
              <%= link_to post.user do %>
                <%= image_tag post.get_post_image(480, 272) %>
              <% end %>
          </div>
        <div class="card-body">
          <table>
            <tr>
              <td>
                <i class="fa-regular fa-comment"></i>
                <%= "#{post.comments.count}" %>
              </td>
              <td><%= render "public/favorites/btn", post: post %></td>
              <td></td>
            </tr>
          </table>
            <p class="card-text"><%= link_to "詳細", post_path(post.id), class:"btn btn-primary" %></p>
          </div>
        </div>
    
    <% end %>
  </div>
    