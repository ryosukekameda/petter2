<div class="row">
  <h1>新規投稿</h1>

<%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>

  <h4>画像</h4>
  <%= f.file_field :post_image, accept: "image/*" %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= f.submit '投稿' %>
  
<% end %>
</div>