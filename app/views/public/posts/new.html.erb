<h1>新規投稿</h1>

<%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>

  <h4>画像</h4>
  <%= f.file_field :post_image, accept: "image/*" %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <h4>タグ</h4>
  <% @tags.each do |tag| %>
    <div class="form-check">
      <%= f.check_box :tag_ids, { multiple: true }, tag.id, nil %>
      <%= f.label :tag_ids, tag.name, value: tag.id %>
    </div>
  <% end %>
  
  <%= f.submit '投稿' %>
  
<% end %>