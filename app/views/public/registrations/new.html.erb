<div class="col-6 posts-container">

  <h2>Sign up</h2>
  
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div>
      <%= f.text_field :name, class:"field-signup" %>
    </div>
    
    <div>
      <%= f.text_field :nickname, class:"field-signup" %>
    </div>
  
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-signup" %>
    </div>
    
    <div>
      <%= f.text_field :phone_number, class:"field-signup" %>
    </div>
  
    <div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"field-signup" %>
    </div>
  
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-signup" %>
    </div>
  
    <div>
      <%= f.submit "Sign up", class:"actions" %>
    </div>
  <% end %>
  
  <%= render "public/shared/links" %>

</div>
