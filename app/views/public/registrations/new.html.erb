<div class="col-6 posts-container text-center">

  <h2>Sign up</h2>
  
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div>
      <%= f.text_field :name, autocomplete: "name", placeholder:"ユーザー名", class:"field-signup" %>
    </div>
    
    <div>
      <%= f.text_field :nickname, autocomplete: "nickname", placeholder:"ニックネーム", class:"field-signup" %>
    </div>
  
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class:"field-signup" %>
    </div>
    
    <div>
      <%= f.text_field :phone_number, autocomplete: "phone_number", placeholder:"電話番号", class:"field-signup" %>
    </div>
  
    <div>
      <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード (#{ @minimum_password_length }文字以上)", class:"field-signup" %>
      <% end %><br />
    </div>
  
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード（確認）", class:"field-signup" %>
    </div>
  
    <div>
      <%= f.submit "Sign up", class:"actions-signup btn btn-outline-success rounded-pill" %>
    </div>
  <% end %>
  
  <div class="user-login">
    アカウントをお持ちの方は
    <%= link_to "こちら", new_user_session_path %>
    から
  </div>

</div>
