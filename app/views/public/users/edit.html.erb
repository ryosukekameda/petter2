
    <div class="col-6 posts-container">
      <div class="card">
        <%= form_with model: @user, local:true do |f| %>
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>Edit profile</div>
          <!-- 保存するボタン -->
          <div class="edit-save-button">
            <%= f.submit 'save', class:"btn btn-outline-dark rounded-pill" %>
          </div>
        </div>
        
        <div class="card-body-edit">
          <div class="image-form">
            <div class="edit-header_image text-center" style="position: relative;">
              <%= label_tag :header_image do %>
                <%= image_tag @user.get_header_image(850, 290), id: "header-image" %>
              <% end %>
              <%= f.file_field :header_image, placeholder: "ヘッダー画像", class: "d-none", id: "user_header_image" %>
            </div>
            <div class="edit-icon-image">
              <%= label_tag :icon_image do %>
                <%= image_tag @user.get_icon_image(100, 100), class: 'rounded-circle', id: "icon-image" %>
              <% end %>
              <%= f.file_field :icon_image, placeholder: "アイコン画像", class: "d-none", id: "user_icon_image" %>
            </div>
          </div>
        
          <div class="card-text-edit">
            <div class="card-text">
              <label class="form-label">名前</label>
              <%= f.text_field :name, autofocus: true, placeholder:"名前", class: "form-control" %>
            </div>
            <div class="card-text">
              <label class="form-label">ニックネーム</label>
              <%= f.text_field :nickname, autofocus: true, placeholder:"ニックネーム", class: "form-control" %>
            </div>
            <div class="card-text">
              <label class="form-label">自己紹介</label>
              <%= f.text_field :introduction, autofocus: true, placeholder:"自己紹介", class: "form-control" %>
            </div>
            <div class="card-text">
              <label class="form-label">電話番号</label>
              <%= f.text_field :phone_number, autofocus: true, placeholder:"電話番号", class: "form-control" %>
            </div>
          </div>
        </div>
        <!-- 退会するボタン -->
        <%= link_to "退会する", unsubscribe_user_path, method: :delete, class:"btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
